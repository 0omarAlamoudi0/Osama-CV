// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User Information
model UserInfo {
  id         String   @id @default(cuid())
  fullName   String
  jobTitle   String
  email      String
  phone      String
  location   String
  birthDate  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// About Information
model AboutInfo {
  id         String   @id @default(cuid())
  mainIntro  String
  paragraph1 String
  paragraph2 String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// Skills
model Skill {
  id        String   @id @default(cuid())
  name      String
  category  String
  icon      String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Work Experience
model Experience {
  id          String   @id @default(cuid())
  title       String
  company     String
  description String
  isCurrent   Boolean  @default(false)
  startDate   String?
  endDate     String?
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Projects
model Project {
  id          String   @id @default(cuid())
  name        String
  category    String
  description String
  url         String?
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tags        Tag[]
}

// Project Tags
model Tag {
  id        String   @id @default(cuid())
  projectId String
  tag       String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

// Courses
model Course {
  id             String   @id @default(cuid())
  name           String
  provider       String?
  completionDate String?
  certificateUrl String?
  sortOrder      Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
